<a name="item-anchor-<%= item.id %>"></a>
<div class="wrapper-lightgrey" id="item-id-<%= item.id %>" dish-id="<%= item.dish.id unless item.dish.nil? %>">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="dish-show-container">
          <%= image_tag  item.photo.url, class: "img-responsive img-rounded dish-image" %>
        </div>
        </div>
        <div class="col-sm-6">
          <div class="dish-show-container">
          <% if (user_signed_in? and current_user.business_places.include?(@business_place)) or @close_button %>
            <%= link_to item_path(item), method: :delete, remote: true, class: "close close-lg", aria: { label: "Close" } do %>
              <span aria-hidden="true">&times;</span>
            <% end %>
          <% end %>
          <a name="item-id-<%= item.id %>"></a>
          <div class="dish-name"><%= item.name %></div>
          <div class="dish-price">Price: <%= item.price.round %>â‚¬</div>
          <div class="dish-description"><%= item.description %></div>
          <%= social_share_button_tag(@item.name, :url => request.original_url + "#item-anchor-#{item.id}") %>
        </div>
      </div>
    </div>
  </div>
</div>
<div style="height: 2px; background-color: white;"></div>

<%= content_for(:meta_business_place) do %>
  <meta name="twitter:card" content="summary">
  <meta name="twitter:domain" content="<%= request.original_url %>"/>
  <meta property="og:type" content="website" />
  <meta property="og:image" itemprop="image primaryImageOfPage" content="<%= item.photo.url %>" />
  <meta name="twitter:title" property="og:title" itemprop="title name" content="<%= item.name %>" />
  <meta name="twitter:description" property="og:description" itemprop="description" content="<%= @business_place.description %>" />
  <meta property="og:url" content="<%= request.original_url %>"/>
<% end %>
