<div class="margin-top"></div>

<!-- add filters: by price, by distance, by cuisines, by location -->

<div class="wrapper-yellow text-center">
<% unless @items.empty? %>
We found <%= pluralize @items.count, "fresh dish" %> nearby
<% else %>
<i class="fa fa-meh-o" aria-hidden="true"></i> Opps! No matches for your query
<% end %>
</div>

  <!-- combo_box -->
  <div class="container">
    <form action="search" class="form-inline" method="get">
      <select name="location" class="form-control">
          <% BusinessPlace.select(:city).distinct.each do |e| %>
            <option value="<%= e.city.downcase %>" <%= "selected" if e.city == @city %>><%= e.city.capitalize %></option>
          <% end %>
      </select>
      <select name="cuisine_id" class="form-control">
          <option value="0">All Cuisines</option>
          <% Cuisine.all.each do |cuisine| %>
            <option value="<%= cuisine.id %>" <%= "selected" if @cuisine_id == cuisine.id %>><%= cuisine.name.capitalize %></option>
          <% end %>
      </select>
      &nbsp; Sort by: &nbsp;
      <select name="sort" class="form-control">
        <!-- <option value="1" <%= "selected" if @sort == 1 or @sort == 0 %>>Distance</option> -->
        <option value="0" <%= "selected" if @sort == 0 %>>Name</option>
        <option value="2" <%= "selected" if @sort == 2 %>>Price Low to High</option>
        <option value="3" <%= "selected" if @sort == 3 %>>Price High to Low</option>
      </select>
        <input type="submit" value="Go" class="btn-medium btn-medium-sm btn-medium-yellow">
      </form>
  </div>

  <div class="container">
  <% unless @items.empty? %>
    <div class="search-container">
    <% @items.in_groups_of(3) do |item1, item2, item3| %>
      <div class="row">
        <div class="col-sm-4">
          <%= render 'shared/listcard', item: item1 %>
        </div>
        <% if item2 %>
        <div class="col-sm-4">
          <%= render 'shared/listcard', item: item2 %>
        </div>
        <% end %>
        <% if item3 %>
        <div class="col-sm-4">
          <%= render 'shared/listcard', item: item3 %>
        </div>
        <% end %>
      </div>
    <% end %>
    </div>
  <% else %>
    <div class="margin-top"></div>
  <% end %>

</div>

</div>
